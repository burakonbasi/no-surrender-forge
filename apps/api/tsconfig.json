{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "plugins": [{ "name": "next" }],
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "incremental": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./*"]
      },
      "module": "esnext",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve"
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}